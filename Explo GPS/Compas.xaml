    <!--LayoutRoot est la grille racine où tout le contenu de la page est placé-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--TitlePanel contient le nom de l'application et le titre de la page-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:Name="ApplicationTitle" Text="Explo GPS" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock x:Name="PageTitle" Text="Boussole" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <!--Calibration UI-->
        <Grid x:Name="calibration_Grid" Grid.Row="1" Margin="12,0,12,0" Background="Transparent">
            <StackPanel Name="calibration_StackPanel" Background="{StaticResource PhoneBackgroundBrush}" Opacity="1" Visibility="Collapsed">
                <Image Source="Images/calibrate.png" Opacity=".95" HorizontalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center">La boussolle de ce téléphone doit être calibrée.
  Tenez le téléphone en face de vous et décrivez un mouvement en forme de 8 jusqu'à ce que la calibration soit terminée.</TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                    <TextBlock>Précision :</TextBlock>
                    <TextBlock Name="calibration_TextBlock">0°</TextBlock>
                </StackPanel>
                <Button Name="calibrationButton" Content="Valider" Click="Click_Calibration_Ok"></Button>
            </StackPanel>
        </Grid>
        <!--End Calibration UI-->

